@model IEnumerable<FashionHub.Data.Order>

<div class="all-title-box">
    <div class="container ">
        <div class="row">
            <div class="col-lg-12">
                <h2>Cart</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="cart-box-main">
    <div class="container" style="max-width: 95%;">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.OrderId)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                                <th>@Html.DisplayNameFor(model => model.ExpectedDeliveryDate)</th>
                                <th>@Html.DisplayNameFor(model => model.ReceivedDate)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                                <th>@Html.DisplayNameFor(model => model.Status.StatusName)</th>
                                <th>@Html.DisplayNameFor(model => model.ShippingMethod)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="name-pr">
                                        <a>
                                            @Html.DisplayFor(modelItem => item.OrderId)                                       
                                        </a>
                                    </td>
                                    <td class="price-pr">
                                        <p>$ @Html.DisplayFor(modelItem => item.TotalAmount)</p>
                                    </td>
                                    <td class="price-pr">
                                        <p>
                                            @Html.DisplayFor(modelItem => item.OrderDate)
                                        </p>
                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.ExpectedDeliveryDate)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.ReceivedDate)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.FullName)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.Address)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.PhoneNumber)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.PaymentMethod)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.Status.StatusName)</p>

                                    </td>
                                    <td class="total-pr">
                                        <p>@Html.DisplayFor(modelItem => item.ShippingMethod)</p>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>