@model FashionHub.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="col-sm-6 col-lg-6 mb-3">
    <form class="mt-3" id="formRegister">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Username" class="mb-0">UserName</label>
                <input asp-for="@Model.Username" class="form-control" id="InputUserName" placeholder="UserName"> </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.Password" class="mb-0">Password</label>
                <input asp-for="@Model.Password" class="form-control" id="InputPassword" placeholder="Password"> </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.Email" class="mb-0">Email Address</label>
                <input asp-for="@Model.Email" class="form-control" id="InputEmail1" placeholder="Enter Email"> </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.FullName" class="mb-0">FullName</label>
                <input  asp-for="@Model.FullName" class="form-control" id="InputFullName" placeholder="FullName"> </div>
             <div class="form-group col-md-12">
                <label  asp-for="@Model.Address" class="mb-0">Address</label>
                <input asp-for="@Model.Address"  class="form-control" id="InputAddress" placeholder="Address"> </div>
             <div class="form-group col-md-12">
                <label asp-for="@Model.PhoneNumber"  class="mb-0">PhoneNumber</label>
                <input asp-for="@Model.PhoneNumber"  class="form-control" id="InputPhoneNumber" placeholder="PhoneNumber"> </div>
        </div>
        <button type="submit" class="btn hvr-hover">Register</button>
    </form>
</div>
