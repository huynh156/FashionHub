@model IEnumerable<FashionHub.Data.Product>
   <div id="result"></div>
@section Scripts{
	<script>
		//document ready: đã generate html/css
		$(function () {
			//gắn sự kiện keyup
			$("#findword").keyup(function () {
				$.ajax({
					url: "/Product/Search",
					type: "POST",
					data: {
						keyword: $(this).val().trim()
					},
					success: function(response){
						$("#result").html(response);
					}
				});
			});
		});
	</script>
}