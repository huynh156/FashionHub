@model FashionHub.Data.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="abc">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand.BrandName" class="control-label"></label>
                <select asp-for="Brand.BrandName" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <select asp-for="Category.CategoryName" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="Image" class="control-label"></label>
				<input type="file" name="ProductImage" class="form-control" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="abc">
        <div id="formContainer"></div>
        <button id="showFormButton" class="btn btn-primary">Show Form</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function() {
        let formCounter = 1;

        $("#showFormButton").click(function() {
            addNewForm();
        });

        function addNewForm() {
            // Gọi Ajax để lấy nội dung của form từ server
            $.ajax({
                url: '@Url.Action("GetForm", "Products")', // Thay thế YourController bằng tên thật của controller
                type: 'GET',
                success: function(response) {
                    // Tạo một container mới cho mỗi form
                    const formContainer = $('<div class="form-container"></div>');

                    // Thêm form vào container và thêm container vào formContainer
                    formContainer.append(response);
                    $("#formContainer").append(formContainer);

                    // Gán ID cho form để đảm bảo tính duy nhất
                    const formId = `form${formCounter}`;
                    formContainer.find('form').attr('id', formId);

                    // Tăng chỉ số đếm cho form tiếp theo
                    formCounter++;
                },
                error: function(error) {
                    console.error("Error loading form:", error);
                }
            });
        }
    });
</script>


<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>
    .form-group {
        display: inline-block;
        
    }
    .col-md-4 {
        
        max-width:90%;
        margin: 0 auto;
    }
</style>
